CC= gcc
CFLAGS= -Wall -Werror -Wextra -pedantic
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school
RM= rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

clean:
	$(RM) *~ $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean

re: oclean all

# Object files dependent on m.h
%.o: %.h

.PHONY: all, clean, oclean, fclean,re
