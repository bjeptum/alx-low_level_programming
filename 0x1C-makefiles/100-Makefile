# make -f 100-Makefile

CC= gcc
CFLAGS= -Wall -Werror -Wextra -pedantic
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

clean:
	$(RM) -f *~ $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) -f *~ $(OBJ) $(NAME)

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: all, clean, oclean, fclean, re
