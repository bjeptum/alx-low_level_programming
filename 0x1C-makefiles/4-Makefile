# A complete Makefile

CC= gcc
CFLAGS= -Wall -Werror -Wextra -pedantic
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school
RM= rm -f *~

all: $(NAME)
	re

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ) $(NAME)

oclean: 
	$(RM) $(OBJ)

fclean:
	clean

re:
	oclean all
